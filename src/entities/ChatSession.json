{
  "name": "ChatSession",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique session identifier"
    },
    "user_ip": {
      "type": "string",
      "description": "User's IP address for analytics"
    },
    "user_agent": {
      "type": "string",
      "description": "User's browser information"
    },
    "preferred_language": {
      "type": "string",
      "enum": [
        "en",
        "hi",
        "mr",
        "gu",
        "bn",
        "ta",
        "te",
        "kn"
      ],
      "default": "en",
      "description": "User's preferred language"
    },
    "total_messages": {
      "type": "number",
      "default": 0,
      "description": "Total messages in this session"
    },
    "session_duration": {
      "type": "number",
      "description": "Session duration in minutes"
    },
    "satisfaction_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Overall session satisfaction rating"
    },
    "ended_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the session ended"
    },
    "context": {
      "type": "object",
      "description": "Context information for the conversation"
    }
  },
  "required": [
    "session_id"
  ],
  "rls": {
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "write": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}